-- üåü SQL ORDER BY Cheat Sheet üåü --

-- 1Ô∏è‚É£ Basic Syntax
SELECT column1, column2  
FROM table_name  
ORDER BY column1 [ASC|DESC];

-- 2Ô∏è‚É£ Order by One Column (Ascending is Default)
SELECT *  
FROM employees  
ORDER BY first_name;

-- 3Ô∏è‚É£ Order by One Column in Descending Order
SELECT *  
FROM employees  
ORDER BY salary DESC;

-- 4Ô∏è‚É£ Order by Multiple Columns
SELECT *  
FROM employees  
ORDER BY department, salary DESC;

-- 5Ô∏è‚É£ Order by Column Index
SELECT *  
FROM employees  
ORDER BY 2, 1; -- Sort by second column, then first

-- 6Ô∏è‚É£ Order by Calculated Columns
SELECT name, (salary + bonus) AS total_compensation  
FROM employees  
ORDER BY total_compensation DESC;

-- 7Ô∏è‚É£ Combine with LIMIT for Top Results
SELECT *  
FROM employees  
ORDER BY salary DESC  
LIMIT 5; -- Top 5 salaries

-- 8Ô∏è‚É£ Use with NULLS First or Last (if supported)
SELECT *  
FROM employees  
ORDER BY commission DESC NULLS LAST;

-- 9Ô∏è‚É£ Case-Insensitive Ordering
SELECT *  
FROM employees  
ORDER BY LOWER(name);

-- 1Ô∏è‚É£0Ô∏è‚É£ Custom Sort Order (Using CASE)
SELECT *  
FROM employees  
ORDER BY  
  CASE  
    WHEN department = 'HR' THEN 1  
    WHEN department = 'IT' THEN 2  
    ELSE 3  
  END;
